{
  "expo": {
    "name": "RocketChatRN",
    "slug": "rocket-chat-reactnative",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rocketchat",
    "jsEngine": "hermes",
    "githubUrl": "https://github.com/RocketChat/Rocket.Chat.ReactNative",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": [
      "ios",
      "android"
    ],
    "experiments": {
      "tsconfigPaths": true
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "chat.rocket.reactnative",
      "googleServicesFile": "./GoogleService-Info.plist",
      "associatedDomains": [
        "applinks:go.rocket.chat"
      ],
      "usesAppleSignIn": true,
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.ios.chat.rocket"
        ],
        "keychain-access-groups": [
          "$(AppIdentifierPrefix)chat.rocket.reactnative"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "chat.rocket.reactnative",
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "@morrowdigital/watermelondb-expo-plugin",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-secure-store",
      "@react-native-firebase/app",
      "@react-native-firebase/crashlytics",
      "expo-asset",
      ["expo-font", { "fonts": ["./assets/fonts/custom.ttf", "./assets/fonts/SpaceMono-Regular.ttf"] }]
    ],
    "extra": {
      "bugsnag": {
        "apiKey": "API_KEY"
      }
    }
  }
}
